@page
@model FileNet.WebApplication.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employees";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Employees</h2>
        <a class="btn btn-primary" asp-page="Create">+ New Employee</a>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Success))
    {
        <div class="alert alert-success">@Model.Success</div>
    }
    @if (!string.IsNullOrWhiteSpace(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }

    <table class="table table-striped table-hover align-middle text-center">
        <thead>
            <tr>
                <th>National Code</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Docs Count</th>
                <th style="width:1%">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.Items)
            {
                <tr>
                    <td>@e.NationalCode</td>
                    <td>@e.FirstName</td>
                    <td>@e.LastName</td>
                    <td class="text-center">@e.DocumentCount</td>
                    <td class="text-nowrap">
                        <a class="btn btn-sm btn-outline-secondary" asp-page="Details" asp-route-id="@e.Id">Details</a>
                        <a class="btn btn-sm btn-outline-primary" asp-page="Edit" asp-route-id="@e.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-dark" asp-page="Documents" asp-route-id="@e.Id">Documents</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@e.Id" class="d-inline"
                              onsubmit="return confirm('Delete this employee? All related documents will be removed.');">
                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
