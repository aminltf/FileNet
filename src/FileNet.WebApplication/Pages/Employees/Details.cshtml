@page "{id:guid}"
@model FileNet.WebApplication.Pages.Employees.DetailsModel
@{
    ViewData["Title"] = "Employee Details";
}
<div class="container mt-4" style="max-width:720px">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">جزئیات کارمند</h2>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@Model.Id">ویرایش</a>
            <a class="btn btn-outline-dark" asp-page="Documents" asp-route-id="@Model.Id">اسناد</a>
            <a class="btn btn-outline-secondary" asp-page="Index">بازگشت</a>
        </div>
    </div>

    @if (Model.Item is not null)
    {
        <dl class="row">
            <dt class="col-sm-4">کدملی</dt>
            <dd class="col-sm-8">@Model.Item.NationalCode</dd>

            <dt class="col-sm-4">نام</dt>
            <dd class="col-sm-8">@Model.Item.FirstName</dd>

            <dt class="col-sm-4">نام‌خانوادگی</dt>
            <dd class="col-sm-8">@Model.Item.LastName</dd>

            <dt class="col-sm-4">جنسیت</dt>
            <dd class="col-sm-8">@Model.Item.Gender.ToString()</dd>

            <dt class="col-sm-4">نام دپارتمان</dt>
            <dd class="col-sm-8">@Model.Item.DepartmentName</dd>

            <dt class="col-sm-4">اسناد</dt>
            <dd class="col-sm-8">@Model.Item.DocumentCount</dd>
        </dl>
    }
</div>
