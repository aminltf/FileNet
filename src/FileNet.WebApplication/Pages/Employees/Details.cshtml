@page "{id:guid}"
@model FileNet.WebApplication.Pages.Employees.DetailsModel
@{
    ViewData["Title"] = "Employee Details";
}
<div class="container mt-4" style="max-width:720px">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Employee Details</h2>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-outline-dark" asp-page="Documents" asp-route-id="@Model.Id">Documents</a>
            <a class="btn btn-outline-secondary" asp-page="Index">Back</a>
        </div>
    </div>

    @if (Model.Item is not null)
    {
        <dl class="row">
            <dt class="col-sm-4">National Code</dt>
            <dd class="col-sm-8">@Model.Item.NationalCode</dd>

            <dt class="col-sm-4">First Name</dt>
            <dd class="col-sm-8">@Model.Item.FirstName</dd>

            <dt class="col-sm-4">Last Name</dt>
            <dd class="col-sm-8">@Model.Item.LastName</dd>

            <dt class="col-sm-4">Gender</dt>
            <dd class="col-sm-8">@Model.Item.Gender.ToString()</dd>

            <dt class="col-sm-4">Depratment Name</dt>
            <dd class="col-sm-8">@Model.Item.DepartmentName</dd>

            <dt class="col-sm-4">Documents</dt>
            <dd class="col-sm-8">@Model.Item.DocumentCount</dd>
        </dl>
    }
</div>
