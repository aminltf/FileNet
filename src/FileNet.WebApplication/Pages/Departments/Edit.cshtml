@page "{id:guid}"
@model FileNet.WebApplication.Pages.Departments.EditModel
@{
	ViewData["Title"] = "Edit Department";
}
<div class="container mt-4" style="max-width:720px">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">ویرایش دپارتمان</h2>
        <a class="btn btn-outline-secondary" asp-page="Details" asp-route-id="@Model.Id">بازگشت</a>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }
    @if (!string.IsNullOrWhiteSpace(Model.Success))
    {
        <div class="alert alert-success">@Model.Success</div>
    }

    <form method="post" class="needs-validation" novalidate>
        <input asp-for="Id" type="hidden" />
        <div class="mb-3">
            <label asp-for="Input.Code" class="form-label"></label>
            <input asp-for="Input.Code" class="form-control" />
            <span class="text-danger" asp-validation-for="Input.Code"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Name" class="form-label"></label>
            <input asp-for="Input.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Input.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Description" class="form-label"></label>
            <input asp-for="Input.Description" class="form-control" />
            <span class="text-danger" asp-validation-for="Input.Description"></span>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-primary" type="submit">ذخیره</button>
            <a class="btn btn-outline-secondary" asp-page="Details" asp-route-id="@Model.Id">انصراف</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
